{
	"$id": "Account",
	"type": "object",
	"definitions":
	{
		"uuid":
		{
			"anyof":
			[
				{"type": "string", "pattern": "/^[0-9a-f]{32}$/"},
				{"type": "string", "pattern": "/^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$/"}
			]
		},
		"base64":
		{
			"type": "string",
			"pattern": "/^[a-z0-9+/]+={0,3}$/i"
		}
	},
	"properties":
	{
		"id": {"$ref": "#/definitions/uuid"},
		"email":
		{
			"type": "string",
			"format": "email"
		},
		"password": {"type": "string", "minLength": 8},
		"validated":
		{
			"type": "boolean",
			"default": false
		},
		"disabled":
		{
			"type": "boolean",
			"default": false
		},
		"last_login":
		{
			"type": "string",
			"format": "date-time"
		},
		"character_list":
		{
			"type": "array",
			"items": {"$ref": "#/definitions/uuid"}
		}
	}
}